<% if @well.present? %>
  <% content_for :title, "Upload SCXRD Dataset for Well #{@well.well_label}" %>
<% else %>
  <% content_for :title, "Upload SCXRD Dataset" %>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <% if @well.present? %>
            <h4 class="mb-0">Upload SCXRD Dataset for Well <%= @well.well_label %></h4>
            <small class="text-muted">Plate: <%= @well.plate.barcode %></small>
          <% else %>
            <h4 class="mb-0">Upload SCXRD Dataset</h4>
            <small class="text-muted">Create a new standalone SCXRD dataset</small>
          <% end %>
        </div>
        <div class="card-body">
          <%= render 'form', scxrd_dataset: @scxrd_dataset %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-3 text-center">
  <% if @well.present? %>
    <%= link_to 'Back to Plate', @well.plate, class: 'btn btn-secondary' %>
  <% else %>
    <%= link_to 'Back to All Datasets', scxrd_datasets_path, class: 'btn btn-secondary' %>
  <% end %>
</div>
