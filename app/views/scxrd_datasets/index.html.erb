<% content_for :title, "All SCXRD Datasets" %>
<% content_for :head do %>
  <%= stylesheet_link_tag 'scxrd/gallery' %>
  <%= javascript_include_tag 'scxrd/diffraction_viewer' %>
  <%= javascript_include_tag 'scxrd/card_toggler' %>
  <%= javascript_include_tag 'scxrd/reciprocal_lattice_viewer' %>
  <%= javascript_include_tag 'scxrd/gallery' %>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>All SCXRD Datasets</h2>
  <div class="d-flex align-items-center gap-3">
    <div class="text-muted">
      <i class="fas fa-cube"></i> <%= @scxrd_datasets.total_count %> datasets total
    </div>
  </div>
</div>

<% if @scxrd_datasets.any? %>
  <div class="row">
    <% @scxrd_datasets.each_with_index do |dataset, index| %>
      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-1">
                  <%= link_to(dataset.experiment_name.presence || "SCXRD Dataset ##{dataset.id}", 
                             scxrd_dataset_path(dataset), 
                             class: "text-decoration-none") %>
                </h5>
                <div class="text-muted small">
                  <strong>Well:</strong> 
                  <%= link_to "#{dataset.well.plate.barcode}-#{dataset.well.well_label}", 
                             dataset.well.plate, 
                             class: "text-decoration-none" %>
                  | 
                  <strong>Measured:</strong> <%= (dataset.date_measured || dataset.created_at).strftime('%b %d, %Y at %H:%M') %>
                  <% if dataset.niggli_a.present? %>
                    | <strong>Unit Cell:</strong> 
                    a=<%= number_with_precision(dataset.niggli_a, precision: 3) %>Å 
                    b=<%= number_with_precision(dataset.niggli_b, precision: 3) %>Å 
                    c=<%= number_with_precision(dataset.niggli_c, precision: 3) %>Å
                  <% end %>
                </div>
              </div>
              <div class="text-end">
                <div class="mb-1">
                  <% if dataset.has_first_image? %>
                    <span class="badge bg-primary">Image</span>
                  <% end %>
                  <% if dataset.has_peak_table? %>
                    <span class="badge bg-success">Peak Table</span>
                  <% end %>
                  <span class="badge bg-info">Primitive</span>
                </div>
                <div class="btn-group btn-group-sm">
                  <%= link_to scxrd_dataset_path(dataset), 
                             class: "btn btn-outline-primary btn-sm" do %>
                    <i class="fas fa-eye"></i> Details
                  <% end %>
                  <% if dataset.archive.attached? %>
                    <%= link_to download_scxrd_dataset_path(dataset), 
                               class: "btn btn-outline-success btn-sm" do %>
                      <i class="fas fa-download"></i> Archive
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body">
            <%= render 'scxrd_datasets/dataset_viewer', dataset: dataset, well: dataset.well, index: index %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @scxrd_datasets %>
  </div>

<% else %>
  <div class="alert alert-info text-center">
    <i class="fas fa-cube" style="font-size: 3rem;" class="text-muted"></i>
    <h4>No SCXRD Datasets</h4>
    <p>No single crystal X-ray diffraction datasets have been uploaded to the system yet.</p>
    <p class="mb-0">
      <small class="text-muted">
        SCXRD datasets are uploaded from individual well pages.
      </small>
    </p>
  </div>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize card toggler for the page
    if (window.scxrdCardToggler && typeof window.scxrdCardToggler.reinitialize === 'function') {
      setTimeout(() => {
        window.scxrdCardToggler.reinitialize();
      }, 500);
    }
  });
</script>