<% content_for :title, "All SCXRD Datasets" %>
<% content_for :head do %>
  <%= stylesheet_link_tag 'scxrd/gallery' %>
<% end %>

<script type="module">
  import 'scxrd/rod_image_parser';
  import 'scxrd/diffraction_viewer';
  import 'scxrd/card_toggler';
  import 'scxrd/reciprocal_lattice_viewer';
  import 'scxrd/gallery';

  // Set the WASM asset path for the ROD parser
  window.ROD_WASM_PATH = '<%= asset_path("rod_decoder.wasm") %>';
</script>

<div data-controller="g6-comparison">

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>All SCXRD Datasets</h2>
  <div class="d-flex align-items-center gap-3">
    <div class="text-muted">
      <i class="bi bi-box"></i> <%= @scxrd_datasets.total_count %> datasets total
      <% if G6DistanceService.enabled? %>
        <% datasets_with_cells = ScxrdDataset.with_primitive_cells.count %>
        <% if datasets_with_cells > 0 %>
          | <i class="bi bi-diagram-3"></i> <%= datasets_with_cells %> with unit cells
        <% end %>
      <% else %>
        | <span class="text-warning"><i class="bi bi-exclamation-triangle"></i> G6 API disabled</span>
      <% end %>
    </div>
    <%= link_to new_scxrd_dataset_path, class: "btn btn-primary" do %>
      <i class="bi bi-upload"></i> Upload Dataset
    <% end %>
  </div>
</div>

<!-- Search and Sort Controls -->
<div class="row mb-4">
  <div class="col-md-6">
    <%= form_with url: scxrd_datasets_path, method: :get, local: true, class: "d-flex" do |f| %>
      <div class="input-group">
        <%= f.text_field :search, 
                        value: params[:search], 
                        placeholder: "Search by experiment name...", 
                        class: "form-control" %>
        <button class="btn btn-outline-secondary" type="submit">
          <i class="bi bi-search"></i>
        </button>
        <% if params[:search].present? %>
          <%= link_to scxrd_datasets_path(sort: params[:sort], direction: params[:direction]), 
                     class: "btn btn-outline-secondary" do %>
            <i class="bi bi-x"></i>
          <% end %>
        <% end %>
      </div>
      <%= f.hidden_field :sort, value: params[:sort] %>
      <%= f.hidden_field :direction, value: params[:direction] %>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="d-flex justify-content-end gap-2">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
          <i class="bi bi-sort-down"></i> 
          Sort by: 
          <% case params[:sort] %>
          <% when 'measured_at' %>
            Date Measured
          <% when 'experiment_name' %>
            Experiment Name
          <% else %>
            Date Created
          <% end %>
        </button>
        <ul class="dropdown-menu">
          <li>
            <%= link_to scxrd_datasets_path(sort: 'measured_at', direction: 'desc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'measured_at' && params[:direction] != 'asc'}" do %>
              <i class="bi bi-calendar-check"></i> Date Measured (Newest)
            <% end %>
          </li>
          <li>
            <%= link_to scxrd_datasets_path(sort: 'measured_at', direction: 'asc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'measured_at' && params[:direction] == 'asc'}" do %>
              <i class="bi bi-calendar-check"></i> Date Measured (Oldest)
            <% end %>
          </li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <%= link_to scxrd_datasets_path(sort: 'experiment_name', direction: 'asc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'experiment_name' && params[:direction] == 'asc'}" do %>
              <i class="bi bi-sort-alpha-down"></i> Experiment Name (A-Z)
            <% end %>
          </li>
          <li>
            <%= link_to scxrd_datasets_path(sort: 'experiment_name', direction: 'desc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'experiment_name' && params[:direction] == 'desc'}" do %>
              <i class="bi bi-sort-alpha-up"></i> Experiment Name (Z-A)
            <% end %>
          </li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <%= link_to scxrd_datasets_path(sort: 'created_at', direction: 'desc', search: params[:search]), 
                       class: "dropdown-item #{'active' if (params[:sort].blank? || params[:sort] == 'created_at') && params[:direction] != 'asc'}" do %>
              <i class="bi bi-clock"></i> Date Created (Newest)
            <% end %>
          </li>
          <li>
            <%= link_to scxrd_datasets_path(sort: 'created_at', direction: 'asc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'created_at' && params[:direction] == 'asc'}" do %>
              <i class="bi bi-clock"></i> Date Created (Oldest)
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<% if @scxrd_datasets.any? %>
  <% if params[:search].present? %>
    <div class="alert alert-info mb-3">
      <i class="bi bi-search"></i> 
      Showing <%= @scxrd_datasets.total_count %> datasets matching "<strong><%= params[:search] %></strong>"
      <%= link_to "Clear search", scxrd_datasets_path(sort: params[:sort], direction: params[:direction]), 
                 class: "btn btn-sm btn-outline-primary ms-2" %>
    </div>
  <% end %>
  
  <div class="row">
    <% @scxrd_datasets.each_with_index do |dataset, index| %>
      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-1">
                  <%= link_to(dataset.experiment_name.presence || "SCXRD Dataset ##{dataset.id}", 
                             scxrd_dataset_path(dataset), 
                             class: "text-decoration-none") %>
                </h5>
                <div class="text-muted small">
                  <% if dataset.well.present? %>
                    <strong>Well:</strong> 
                    <%= link_to "#{dataset.well.plate.barcode}-#{dataset.well.well_label}", 
                               dataset.well.plate, 
                               class: "text-decoration-none" %>
                    <% if dataset.real_world_x_mm.present? && dataset.real_world_y_mm.present? && dataset.real_world_z_mm.present? %>
                      <span class="text-info ms-2">
                        (x=<%= number_with_precision(dataset.real_world_x_mm, precision: 2) %>mm, 
                         y=<%= number_with_precision(dataset.real_world_y_mm, precision: 2) %>mm, 
                         z=<%= number_with_precision(dataset.real_world_z_mm, precision: 2) %>mm)
                      </span>
                    <% end %>
                    | 
                  <% else %>
                    <strong>Type:</strong> <span class="badge bg-secondary">Standalone</span> | 
                  <% end %>
                  <strong>Measured:</strong> <%= (dataset.measured_at || dataset.created_at).strftime('%b %d, %Y at %H:%M') %>
                  <% if dataset.has_primitive_cell? %>
                    | <strong>Unit Cell:</strong> 
                    <%= format_unit_cell(dataset) %>
                  <% end %>
                </div>
              </div>
              <div class="text-end">
                <div class="d-flex align-items-center gap-2">
                  <% if dataset.has_primitive_cell? %>
                    <button type="button" class="btn btn-outline-info btn-sm similarity-button" 
                            id="similarity-btn-<%= dataset.id %>"
                            data-dataset-id="<%= dataset.id %>"
                            data-bs-toggle="modal" 
                            data-bs-target="#g6ComparisonModal"
                            data-g6-comparison-target="similarityButton"
                            data-action="click->g6-comparison#loadG6Comparison">
                      <i class="bi bi-box-seam me-1"></i>
                      <span class="similarity-text">Loading...</span>
                    </button>
                  <% end %>
                  <div class="btn-group btn-group-sm">
                    <%= link_to scxrd_dataset_path(dataset), 
                               class: "btn btn-outline-primary btn-sm" do %>
                      <i class="bi bi-eye"></i> Details
                    <% end %>
                    <% if dataset.archive.attached? %>
                      <%= link_to download_scxrd_dataset_path(dataset), 
                                 class: "btn btn-outline-success btn-sm" do %>
                        <i class="bi bi-download"></i> Archive
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body">
            <%= render 'scxrd_datasets/dataset_viewer', dataset: dataset, well: dataset.well, index: index %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @scxrd_datasets, params: { search: params[:search], sort: params[:sort], direction: params[:direction] } %>
  </div>

<% else %>
  <div class="alert alert-info text-center">
    <% if params[:search].present? %>
      <i class="bi bi-search" style="font-size: 3rem;" class="text-muted"></i>
      <h4>No Matching Datasets</h4>
      <p>No SCXRD datasets match your search for "<strong><%= params[:search] %></strong>".</p>
      <p class="mb-0">
        <%= link_to "Clear search", scxrd_datasets_path, class: "btn btn-outline-primary" %>
      </p>
    <% else %>
      <i class="bi bi-box" style="font-size: 3rem;" class="text-muted"></i>
      <h4>No SCXRD Datasets</h4>
      <p>No single crystal X-ray diffraction datasets have been uploaded to the system yet.</p>
      <p class="mt-2 mb-0">
        <small class="text-muted">
          You can also upload SCXRD datasets from individual well pages if associating with a specific well.
        </small>
      </p>
    <% end %>
  </div>
<% end %>

<!-- G6 Comparison Modal -->
<div class="modal fade" id="g6ComparisonModal" tabindex="-1" aria-labelledby="g6ComparisonModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="g6ComparisonModalLabel">
          <i class="bi bi-box-seam me-2"></i>Unit Cell Analysis
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <!-- G6 Tolerance Control -->
        <div class="mb-3">
          <div class="row align-items-center">
            <div class="col-auto">
              <label for="g6Tolerance" class="form-label me-2">G6 Tolerance:</label>
              <input type="number" id="g6Tolerance" class="form-control d-inline-block" 
                     style="width: 80px;" value="10.0" step="0.1" min="0.1"
                     data-g6-comparison-target="toleranceInput">
              <button type="button" class="btn btn-outline-secondary btn-sm ms-2" 
                      data-action="click->g6-comparison#updateG6Comparison">Update</button>
            </div>
          </div>
        </div>

        <!-- Local Database Comparison -->
        <div data-g6-comparison-target="g6Content">
          <div class="text-center py-4">
            <div class="spinner-border" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Searching for similar unit cells...</p>
          </div>
        </div>

        <!-- CSD Search Results -->
        <div class="mt-4">
          <h6 class="border-bottom pb-2">
            <i class="bi bi-globe me-2"></i>Cambridge Structural Database Results
          </h6>
          <div data-g6-comparison-target="csdContent">
            <div class="text-center py-3">
              <div class="spinner-border spinner-border-sm" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <p class="mt-2 mb-0">Searching CSD...</p>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



<style>
  .modal-xl {
    max-width: 1200px;
  }
  
  #unitCellTabs .nav-link {
    border-bottom: 2px solid transparent;
  }
  
  #unitCellTabs .nav-link.active {
    border-bottom-color: var(--bs-primary);
  }
  
  .tab-content {
    min-height: 400px;
  }
  
  .table-responsive {
    max-height: 400px;
    overflow-y: auto;
  }
  
  .alert {
    margin-bottom: 1rem;
  }
  
  .spinner-border {
    color: var(--bs-primary);
  }
</style>

</div>