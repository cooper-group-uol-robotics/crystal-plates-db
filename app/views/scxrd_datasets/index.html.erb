<% content_for :title, "All SCXRD Datasets" %>
<% content_for :head do %>
  <%= stylesheet_link_tag 'scxrd/gallery' %>
  <%= javascript_include_tag 'rod_image_parser' %>
  <%= javascript_include_tag 'scxrd/diffraction_viewer' %>
  <%= javascript_include_tag 'scxrd/card_toggler' %>
  <%= javascript_include_tag 'scxrd/reciprocal_lattice_viewer' %>
  <%= javascript_include_tag 'scxrd/gallery' %>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>All SCXRD Datasets</h2>
  <div class="d-flex align-items-center gap-3">
    <div class="text-muted">
      <i class="bi bi-box"></i> <%= @scxrd_datasets.total_count %> datasets total
    </div>
    <%= link_to new_scxrd_dataset_path, class: "btn btn-primary" do %>
      <i class="bi bi-upload"></i> Upload Dataset
    <% end %>
  </div>
</div>

<% if @scxrd_datasets.any? %>
  <div class="row">
    <% @scxrd_datasets.each_with_index do |dataset, index| %>
      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="mb-1">
                  <%= link_to(dataset.experiment_name.presence || "SCXRD Dataset ##{dataset.id}", 
                             scxrd_dataset_path(dataset), 
                             class: "text-decoration-none") %>
                </h5>
                <div class="text-muted small">
                  <% if dataset.well.present? %>
                    <strong>Well:</strong> 
                    <%= link_to "#{dataset.well.plate.barcode}-#{dataset.well.well_label}", 
                               dataset.well.plate, 
                               class: "text-decoration-none" %>
                    <% if dataset.real_world_x_mm.present? && dataset.real_world_y_mm.present? && dataset.real_world_z_mm.present? %>
                      <span class="text-info ms-2">
                        (x=<%= number_with_precision(dataset.real_world_x_mm, precision: 2) %>mm, 
                         y=<%= number_with_precision(dataset.real_world_y_mm, precision: 2) %>mm, 
                         z=<%= number_with_precision(dataset.real_world_z_mm, precision: 2) %>mm)
                      </span>
                    <% end %>
                    | 
                  <% else %>
                    <strong>Type:</strong> <span class="badge bg-secondary">Standalone</span> | 
                  <% end %>
                  <strong>Measured:</strong> <%= (dataset.measured_at || dataset.created_at).strftime('%b %d, %Y at %H:%M') %>
                  <% if dataset.niggli_a.present? %>
                    | <strong>Reduced (Niggli) Cell:</strong> 
                        a=<%= number_with_precision(dataset.niggli_a, precision: 3) %>Å 
                        b=<%= number_with_precision(dataset.niggli_b, precision: 3) %>Å 
                        c=<%= number_with_precision(dataset.niggli_c, precision: 3) %>Å
                        α=<%= number_with_precision(dataset.niggli_alpha, precision: 2) %>°
                        β=<%= number_with_precision(dataset.niggli_beta, precision: 2) %>°
                        γ=<%= number_with_precision(dataset.niggli_gamma, precision: 2) %>°
                  <% end %>
                </div>
              </div>
              <div class="text-end">
                <div class="btn-group btn-group-sm">
                  <%= link_to scxrd_dataset_path(dataset), 
                             class: "btn btn-outline-primary btn-sm" do %>
                    <i class="bi bi-eye"></i> Details
                  <% end %>
                  <% if dataset.archive.attached? %>
                    <%= link_to download_scxrd_dataset_path(dataset), 
                               class: "btn btn-outline-success btn-sm" do %>
                      <i class="bi bi-download"></i> Archive
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="card-body">
            <%= render 'scxrd_datasets/dataset_viewer', dataset: dataset, well: dataset.well, index: index %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @scxrd_datasets %>
  </div>

<% else %>
  <div class="alert alert-info text-center">
    <i class="bi bi-box" style="font-size: 3rem;" class="text-muted"></i>
    <h4>No SCXRD Datasets</h4>
    <p>No single crystal X-ray diffraction datasets have been uploaded to the system yet.</p>
    <div class="mt-3">
      <%= link_to new_scxrd_dataset_path, class: "btn btn-primary" do %>
        <i class="bi bi-upload"></i> Upload Your First Dataset
      <% end %>
    </div>
    <p class="mt-2 mb-0">
      <small class="text-muted">
        You can also upload SCXRD datasets from individual well pages if associating with a specific well.
      </small>
    </p>
  </div>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Initialize card toggler for the page
    if (window.scxrdCardToggler && typeof window.scxrdCardToggler.reinitialize === 'function') {
      setTimeout(() => {
        window.scxrdCardToggler.reinitialize();
      }, 500);
    }
  });
</script>