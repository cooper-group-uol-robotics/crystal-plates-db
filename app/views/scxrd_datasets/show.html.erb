<% content_for :title, "SCXRD Dataset: #{@scxrd_dataset.experiment_name}" %>
<% content_for :head do %>
  <script type="module">
    import "cifvis";
  </script>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <h4 class="mb-0">SCXRD Dataset: <%= @scxrd_dataset.experiment_name %></h4>
            <% if @scxrd_dataset.well.present? %>
              <small class="text-muted">Well: <%= @scxrd_dataset.well.well_label %><% if @scxrd_dataset.well.plate.present? %> | Plate: <%= @scxrd_dataset.well.plate.barcode %><% end %></small>
            <% else %>
              <small class="text-muted"><span class="badge bg-secondary">Standalone Dataset</span></small>
            <% end %>
          </div>
          <div class="btn-group">
            <% if @scxrd_dataset.archive.attached? %>
              <% if @scxrd_dataset.well.present? %>
                <%= link_to "Download Archive", download_well_scxrd_dataset_path(@scxrd_dataset.well, @scxrd_dataset), 
                    class: "btn btn-success btn-sm" %>
              <% else %>
                <%= link_to "Download Archive", download_scxrd_dataset_path(@scxrd_dataset), 
                    class: "btn btn-success btn-sm" %>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Experiment Name</dt>
            <dd class="col-sm-9"><%= @scxrd_dataset.experiment_name %></dd>

            <dt class="col-sm-3">Date Measured</dt>
            <dd class="col-sm-9">
                <%= @scxrd_dataset.measured_at.strftime('%Y-%m-%d %H:%M') if @scxrd_dataset.measured_at %>
              <% unless @scxrd_dataset.measured_at %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Peak Table</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.has_peak_table? %>
                <span class="badge bg-success me-2">Available</span>
                Size: <%= number_to_human_size(@scxrd_dataset.peak_table_size) %> (.tabbin)
              <% else %>
                <span class="text-muted">Not available</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Diffraction Images</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.has_diffraction_images? %>
                <span class="badge bg-success me-2"><%= @scxrd_dataset.diffraction_images_count %> images</span>
                Total size: <%= number_to_human_size(@scxrd_dataset.total_diffraction_images_size) %> (.rodhypix files)
              <% else %>
                <span class="text-muted">No diffraction images available</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Structure File</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.has_structure_file? %>
                <span class="badge bg-success me-2">Available</span>
                <%= @scxrd_dataset.structure_file.filename %> 
                (<%= @scxrd_dataset.structure_file_format&.upcase %> format)
                <br><small class="text-muted">
                  Size: <%= number_to_human_size(@scxrd_dataset.structure_file.byte_size) %>
                  • Automatically extracted from struct/best_res/
                </small>
              <% else %>
                <span class="text-muted">No structure file found in struct/best_res/</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Complete Archive</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.archive.attached? %>
                <span class="badge bg-success me-2">Available</span>
                <%= @scxrd_dataset.archive.filename %>
                <br><small class="text-muted">
                  Size: <%= number_to_human_size(@scxrd_dataset.archive.byte_size) %>
                  • <%= @scxrd_dataset.archive.content_type %>
                </small>
                <br><small class="text-muted mt-1 d-block">
                  Contains all experiment files to recreate the original folder structure
                </small>
              <% else %>
                <div class="alert alert-warning py-2">
                  <small>No archive file has been uploaded for this dataset.</small>
                </div>
              <% end %>
            </dd>
          </dl>
        </div>

        <!-- 3D Crystal Structure Visualization -->
        <% if @scxrd_dataset.has_structure_file? %>
          <div class="card-body border-top">
            <div class="row">
              <div class="col-md-12">
                <div class="structure-viewer-container" style="height: 500px; border: 1px solid #dee2e6; border-radius: 0.375rem;">
                  <% structure_url = @scxrd_dataset.well.present? ? structure_file_well_scxrd_dataset_path(@scxrd_dataset.well, @scxrd_dataset) : structure_file_scxrd_dataset_path(@scxrd_dataset) %>
                  <cifview-widget 
                    src="<%= structure_url %>"
                    caption="<%= @scxrd_dataset.experiment_name %>"
                    style="width: 100%; height: 100%;">
                  </cifview-widget>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <div class="d-flex align-items-center gap-2">
              <% if @scxrd_dataset.well.present? %>
                <%= link_to "Edit", edit_well_scxrd_dataset_path(@scxrd_dataset.well, @scxrd_dataset), 
                    class: "btn btn-primary" %>
                <%= button_to "Delete", [@scxrd_dataset.well, @scxrd_dataset], 
                    method: :delete, 
                    confirm: "Are you sure you want to delete this SCXRD dataset? This action cannot be undone.", 
                    class: "btn btn-danger" %>
                <%= link_to 'Back to Plate', @scxrd_dataset.well.plate, class: 'btn btn-secondary' %>
              <% else %>
                <%= link_to "Edit", edit_scxrd_dataset_path(@scxrd_dataset), 
                    class: "btn btn-primary" %>
                <%= button_to "Delete", @scxrd_dataset, 
                    method: :delete, 
                    confirm: "Are you sure you want to delete this SCXRD dataset? This action cannot be undone.", 
                    class: "btn btn-danger" %>
                <%= link_to 'Back to All Datasets', scxrd_datasets_path, class: 'btn btn-secondary' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>