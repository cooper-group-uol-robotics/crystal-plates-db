<% content_for :title, "SCXRD Dataset: #{@scxrd_dataset.experiment_name}" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <h4 class="mb-0">SCXRD Dataset: <%= @scxrd_dataset.experiment_name %></h4>
            <small class="text-muted">Well: <%= @well.well_label %> | Plate: <%= @well.plate.barcode %></small>
          </div>
          <div class="btn-group">
            <% if @scxrd_dataset.archive.attached? %>
              <%= link_to "Download Archive", download_well_scxrd_dataset_path(@well, @scxrd_dataset), 
                  class: "btn btn-success btn-sm" %>
            <% end %>
          </div>
        </div>

        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Experiment Name</dt>
            <dd class="col-sm-9"><%= @scxrd_dataset.experiment_name %></dd>

            <dt class="col-sm-3">Date Measured</dt>
            <dd class="col-sm-9">
              <%= @scxrd_dataset.date_measured.strftime('%Y-%m-%d') if @scxrd_dataset.date_measured %>
              <% unless @scxrd_dataset.date_measured %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Date Uploaded</dt>
            <dd class="col-sm-9"><%= @scxrd_dataset.date_uploaded.strftime('%Y-%m-%d %H:%M') if @scxrd_dataset.date_uploaded %></dd>

            <dt class="col-sm-3">Lattice Centring</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.lattice_centring %>
                <%= @scxrd_dataset.lattice_centring.symbol %> 
                <small class="text-muted">(<%= @scxrd_dataset.lattice_centring.description %>)</small>
              <% else %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Unit Cell</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.a.present? %>
                <div class="row">
                  <div class="col-md-6">
                    <strong>a:</strong> <%= number_with_precision(@scxrd_dataset.a, precision: 3) %> Å<br>
                    <strong>b:</strong> <%= number_with_precision(@scxrd_dataset.b, precision: 3) %> Å<br>
                    <strong>c:</strong> <%= number_with_precision(@scxrd_dataset.c, precision: 3) %> Å
                  </div>
                  <div class="col-md-6">
                    <strong>α:</strong> <%= number_with_precision(@scxrd_dataset.alpha, precision: 1) %>°<br>
                    <strong>β:</strong> <%= number_with_precision(@scxrd_dataset.beta, precision: 1) %>°<br>
                    <strong>γ:</strong> <%= number_with_precision(@scxrd_dataset.gamma, precision: 1) %>°
                  </div>
                </div>
              <% else %>
                <span class="text-muted">Unit cell parameters not specified</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Peak Table</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.has_peak_table? %>
                <span class="badge bg-success me-2">Available</span>
                Size: <%= number_to_human_size(@scxrd_dataset.peak_table_size) %> (.tabbin)
                <%= link_to "Download", download_peak_table_well_scxrd_dataset_path(@well, @scxrd_dataset), 
                    class: "btn btn-primary btn-sm ms-2" %>
              <% else %>
                <span class="text-muted">Not available</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">First Diffraction Image</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.has_first_image? %>
                <span class="badge bg-success me-2">Available</span>
                Size: <%= number_to_human_size(@scxrd_dataset.first_image_size) %> (.rodhypix)
                <%= link_to "Download", download_first_image_well_scxrd_dataset_path(@well, @scxrd_dataset), 
                    class: "btn btn-secondary btn-sm ms-2" %>
              <% else %>
                <span class="text-muted">Not available</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Complete Archive</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.archive.attached? %>
                <span class="badge bg-success me-2">Available</span>
                <%= @scxrd_dataset.archive.filename %>
                <br><small class="text-muted">
                  Size: <%= number_to_human_size(@scxrd_dataset.archive.byte_size) %>
                  • <%= @scxrd_dataset.archive.content_type %>
                </small>
                <%= link_to "Download Complete Archive", download_well_scxrd_dataset_path(@well, @scxrd_dataset), 
                    class: "btn btn-success btn-sm ms-2" %>
                <br><small class="text-muted mt-1 d-block">
                  Contains all experiment files to recreate the original folder structure
                </small>
              <% else %>
                <div class="alert alert-warning py-2">
                  <small>No archive file has been uploaded for this dataset.</small>
                </div>
              <% end %>
            </dd>
          </dl>
        </div>

        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <div>
              <%= link_to "Edit", edit_well_scxrd_dataset_path(@well, @scxrd_dataset), 
                  class: "btn btn-primary me-2" %>
              <%= link_to "Delete", [@well, @scxrd_dataset], method: :delete, 
                  confirm: "Are you sure you want to delete this SCXRD dataset? This action cannot be undone.", 
                  class: "btn btn-danger" %>
              <%= link_to 'Back to Plate', @well.plate, class: 'btn btn-secondary ms-2' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>