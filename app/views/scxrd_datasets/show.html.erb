<% content_for :title, "SCXRD Dataset: #{@scxrd_dataset.experiment_name}" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <div>
            <h4 class="mb-0">SCXRD Dataset: <%= @scxrd_dataset.experiment_name %></h4>
            <% if @scxrd_dataset.well.present? %>
              <small class="text-muted">Well: <%= @scxrd_dataset.well.well_label %> | Plate: <%= @scxrd_dataset.well.plate.barcode %></small>
            <% else %>
              <small class="text-muted"><span class="badge bg-secondary">Standalone Dataset</span></small>
            <% end %>
          </div>
          <div class="btn-group">
            <% if @scxrd_dataset.archive.attached? %>
              <% if @scxrd_dataset.well.present? %>
                <%= link_to "Download Archive", download_well_scxrd_dataset_path(@scxrd_dataset.well, @scxrd_dataset), 
                    class: "btn btn-success btn-sm" %>
              <% else %>
                <%= link_to "Download Archive", download_scxrd_dataset_path(@scxrd_dataset), 
                    class: "btn btn-success btn-sm" %>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">Experiment Name</dt>
            <dd class="col-sm-9"><%= @scxrd_dataset.experiment_name %></dd>

            <dt class="col-sm-3">Date Measured</dt>
            <dd class="col-sm-9">
              <%= @scxrd_dataset.date_measured.strftime('%Y-%m-%d') if @scxrd_dataset.date_measured %>
              <% unless @scxrd_dataset.date_measured %>
                <span class="text-muted">Not specified</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Date Uploaded</dt>
            <dd class="col-sm-9"><%= @scxrd_dataset.date_uploaded.strftime('%Y-%m-%d %H:%M') if @scxrd_dataset.date_uploaded %></dd>

            <dt class="col-sm-3">Peak Table</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.has_peak_table? %>
                <span class="badge bg-success me-2">Available</span>
                Size: <%= number_to_human_size(@scxrd_dataset.peak_table_size) %> (.tabbin)
                <% if @scxrd_dataset.well.present? %>
                  <%= link_to "Download", download_peak_table_well_scxrd_dataset_path(@scxrd_dataset.well, @scxrd_dataset), 
                      class: "btn btn-primary btn-sm ms-2" %>
                <% else %>
                  <%= link_to "Download", download_peak_table_scxrd_dataset_path(@scxrd_dataset), 
                      class: "btn btn-primary btn-sm ms-2" %>
                <% end %>
              <% else %>
                <span class="text-muted">Not available</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">First Diffraction Image</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.has_first_image? %>
                <span class="badge bg-success me-2">Available</span>
                Size: <%= number_to_human_size(@scxrd_dataset.first_image_size) %> (.rodhypix)
                <% if @scxrd_dataset.well.present? %>
                  <%= link_to "Download", download_first_image_well_scxrd_dataset_path(@scxrd_dataset.well, @scxrd_dataset), 
                      class: "btn btn-secondary btn-sm ms-2" %>
                <% else %>
                  <%= link_to "Download", download_first_image_scxrd_dataset_path(@scxrd_dataset), 
                      class: "btn btn-secondary btn-sm ms-2" %>
                <% end %>
              <% else %>
                <span class="text-muted">Not available</span>
              <% end %>
            </dd>

            <dt class="col-sm-3">Complete Archive</dt>
            <dd class="col-sm-9">
              <% if @scxrd_dataset.archive.attached? %>
                <span class="badge bg-success me-2">Available</span>
                <%= @scxrd_dataset.archive.filename %>
                <br><small class="text-muted">
                  Size: <%= number_to_human_size(@scxrd_dataset.archive.byte_size) %>
                  â€¢ <%= @scxrd_dataset.archive.content_type %>
                </small>
                <% if @scxrd_dataset.well.present? %>
                  <%= link_to "Download Complete Archive", download_well_scxrd_dataset_path(@scxrd_dataset.well, @scxrd_dataset), 
                      class: "btn btn-success btn-sm ms-2" %>
                <% else %>
                  <%= link_to "Download Complete Archive", download_scxrd_dataset_path(@scxrd_dataset), 
                      class: "btn btn-success btn-sm ms-2" %>
                <% end %>
                <br><small class="text-muted mt-1 d-block">
                  Contains all experiment files to recreate the original folder structure
                </small>
              <% else %>
                <div class="alert alert-warning py-2">
                  <small>No archive file has been uploaded for this dataset.</small>
                </div>
              <% end %>
            </dd>
          </dl>
        </div>

        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <div class="d-flex align-items-center gap-2">
              <% if @scxrd_dataset.well.present? %>
                <%= link_to "Edit", edit_well_scxrd_dataset_path(@scxrd_dataset.well, @scxrd_dataset), 
                    class: "btn btn-primary" %>
                <%= button_to "Delete", [@scxrd_dataset.well, @scxrd_dataset], 
                    method: :delete, 
                    confirm: "Are you sure you want to delete this SCXRD dataset? This action cannot be undone.", 
                    class: "btn btn-danger" %>
                <%= link_to 'Back to Plate', @scxrd_dataset.well.plate, class: 'btn btn-secondary' %>
              <% else %>
                <%= link_to "Edit", edit_scxrd_dataset_path(@scxrd_dataset), 
                    class: "btn btn-primary" %>
                <%= button_to "Delete", @scxrd_dataset, 
                    method: :delete, 
                    confirm: "Are you sure you want to delete this SCXRD dataset? This action cannot be undone.", 
                    class: "btn btn-danger" %>
                <%= link_to 'Back to All Datasets', scxrd_datasets_path, class: 'btn btn-secondary' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>