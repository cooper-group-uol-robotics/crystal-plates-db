<% if @scxrd_dataset.well.present? %>
  <% content_for :title, "Edit SCXRD Dataset for Well #{@scxrd_dataset.well.well_label}" %>
<% else %>
  <% content_for :title, "Edit SCXRD Dataset" %>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <% if @scxrd_dataset.well.present? %>
            <h4 class="mb-0">Edit SCXRD Dataset for Well <%= @scxrd_dataset.well.well_label %></h4>
            <% if @scxrd_dataset.well.plate.present? %>
              <small class="text-muted">Plate: <%= @scxrd_dataset.well.plate.barcode %></small>
            <% end %>
          <% else %>
            <h4 class="mb-0">Edit SCXRD Dataset</h4>
            <small class="text-muted">
              <%= @scxrd_dataset.experiment_name.presence || "SCXRD Dataset ##{@scxrd_dataset.id}" %>
            </small>
          <% end %>
        </div>
        <div class="card-body">
          <%= render 'form', scxrd_dataset: @scxrd_dataset %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-3 text-center">
  <% if @scxrd_dataset.well.present? %>
    <%= link_to 'Back to Plate', @scxrd_dataset.well.plate, class: 'btn btn-secondary' %>
  <% else %>
    <%= link_to 'Back to All Datasets', scxrd_datasets_path, class: 'btn btn-secondary' %>
  <% end %>
</div>

