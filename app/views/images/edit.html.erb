<% content_for :title, "Edit Image" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Edit Image for Well <%= @well.well_label %></h4>
          <small class="text-muted">Plate: <%= @well.plate.barcode %></small>
        </div>
        <div class="card-body">
          <%= render 'form', image: @image %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-3 text-center">
  <%= link_to 'Show Image', well_image_path(@well, @image), class: 'btn btn-outline-secondary me-2' %>
  <%= link_to 'Back to Well', @well, class: 'btn btn-secondary' %>
</div>
