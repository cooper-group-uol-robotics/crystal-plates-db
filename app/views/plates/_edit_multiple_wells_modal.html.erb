<div class="modal fade" 
     id="editMultipleWellsModal" 
     tabindex="-1" 
     aria-labelledby="editMultipleWellsModalLabel" 
     aria-hidden="true"
     data-controller="bulk-well-content-form"
     data-bulk-well-content-form-chemical-search-url-value="<%= search_chemicals_path %>"
     data-bulk-well-content-form-stock-solution-search-url-value="<%= search_stock_solutions_path %>">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editMultipleWellsModalLabel">Edit Multiple Wells</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="max-height: 80vh; overflow-y: auto;">
        <style>
          .search-results {
            max-height: 200px;
            overflow-y: auto;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            background-color: white;
            z-index: 1060;
          }
          
          .search-result-item {
            padding: 0.5rem 1rem;
            border-bottom: 1px solid #f8f9fa;
            cursor: pointer;
            transition: background-color 0.15s ease-in-out;
          }
          
          .search-result-item:hover {
            background-color: #f8f9fa;
          }
          
          .search-result-item:last-child {
            border-bottom: none;
          }
        </style>
        
        <div class="mb-3">
          <h5>Add Content to Selected Wells</h5>
          
          <!-- Content Type Selection -->
          <div class="mb-3">
            <label class="form-label">Content Type</label>
            <select class="form-select" 
                    data-bulk-well-content-form-target="contentType" 
                    data-action="change->bulk-well-content-form#contentTypeChanged">
              <option value="">Select content type...</option>
              <option value="stock_solution" selected>Stock Solution</option>
              <option value="chemical">Chemical (Direct)</option>
            </select>
          </div>

          <!-- Stock Solution Fields -->
          <div data-bulk-well-content-form-target="stockSolutionFields" class="content-section">
            <div class="row">
              <div class="col-md-8">
                <label class="form-label">Stock Solution</label>
                <div class="position-relative">
                  <input type="hidden" 
                         data-bulk-well-content-form-target="stockSolutionSelect">
                  <input type="text" class="form-control" 
                         placeholder="Search by name or components..."
                         data-bulk-well-content-form-target="stockSolutionSearch"
                         data-action="input->bulk-well-content-form#searchStockSolutions">
                  <div class="position-absolute w-100 search-results"
                       style="top: 100%; display: none;"
                       data-bulk-well-content-form-target="stockSolutionResults">
                  </div>
                </div>
              </div>
              
              <div class="col-md-4">
                <label class="form-label">Volume</label>
                <input type="text" class="form-control" 
                       placeholder="e.g., 50 μL"
                       data-bulk-well-content-form-target="stockSolutionVolume">
              </div>
            </div>
          </div>

          <!-- Chemical Fields -->
          <div data-bulk-well-content-form-target="chemicalFields" class="content-section" style="display: none;">
            <div class="row">
              <div class="col-md-8">
                <label class="form-label">Chemical</label>
                <div class="position-relative">
                  <input type="hidden" 
                         data-bulk-well-content-form-target="chemicalSelect">
                  <input type="text" class="form-control" 
                         placeholder="Search by name or CAS..."
                         data-bulk-well-content-form-target="chemicalSearch"
                         data-action="input->bulk-well-content-form#searchChemicals">
                  <div class="position-absolute w-100 search-results"
                       style="top: 100%; display: none;"
                       data-bulk-well-content-form-target="chemicalResults">
                  </div>
                </div>
              </div>
              
              <div class="col-md-4">
                <label class="form-label">Volume/Amount</label>
                <input type="text" class="form-control" 
                       placeholder="e.g., 50 μL, 10 mg"
                       data-bulk-well-content-form-target="chemicalVolume">
              </div>
            </div>
          </div>

          <div class="mt-3">
            <button type="button" 
                    class="btn btn-primary"
                    data-action="click->bulk-well-content-form#submitContent">
              Add to selected wells
            </button>
          </div>
        </div>
        
        <div class="mt-2" 
             id="bulkContentMessages"
             data-bulk-well-content-form-target="messages">
          <!-- Messages will appear here -->
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
