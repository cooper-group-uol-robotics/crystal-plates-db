<% content_for :title, "Plate #{@plate.display_name}" %>
<% content_for :head do %>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-zoom@1.2.1/dist/chartjs-plugin-zoom.min.js"></script>
  <%= stylesheet_link_tag 'plates_show' %>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Plate: <%= @plate.display_name %></h1>
  <%= plate_action_buttons(@plate) %>
</div>

<!-- Collapsible Plate Metadata -->
<div class="card mb-4">
  <div class="card-header p-2">
    <button class="btn btn-link p-0 text-decoration-none d-flex align-items-center w-100" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#plateMetadataCollapse" 
            aria-expanded="false" 
            aria-controls="plateMetadataCollapse">
      <i class="fas fa-info-circle me-2 text-muted"></i>
      <span class="text-muted">Plate Information & Storage</span>
      <i class="fas fa-chevron-down ms-auto text-muted"></i>
    </button>
  </div>
  <div class="collapse" id="plateMetadataCollapse">
    <div class="card-body">
      <div class="row">
        <div class="col-md-8">
          <%= render 'plate_details_content' %>
        </div>
        <div class="col-md-4">
          <%= render 'storage_location_content' %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'bulk_upload_form' %>

<%= render 'wells_grid' %>

<%= render 'points_of_interest' %>

<%= render 'well_modal' %>

<%= javascript_include_tag "plates_show" %>