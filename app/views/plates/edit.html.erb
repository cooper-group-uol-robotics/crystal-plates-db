<% content_for :title, "Editing Plate" %>

<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">Editing Plate</h1>
    <div>
      <%= link_to "Show this plate", @plate, class: "btn btn-outline-primary me-2" %>
      <%= link_to "Back to plates", plates_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="card shadow-sm p-4">
    <%= render "form", plate: @plate %>
  </div>
</div>

