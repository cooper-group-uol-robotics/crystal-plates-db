<div id="<%= dom_id well %>">
  <p>
    <strong>Well:</strong>
    <%= well.well_label_with_subwell %>
  </p>

  <p>
    <strong>Plate:</strong>
    <%= link_to well.plate.barcode, well.plate %>
  </p>

  <p>
    <strong>Position:</strong>
    Row <%= well.well_row %>, Column <%= well.well_column %>
    <% if well.subwell && well.subwell > 1 %>
      , Subwell <%= well.subwell %>
    <% end %>
  </p>

  <% if well.has_coordinates? %>
    <p>
      <strong>Coordinates:</strong>
      <%= well.coordinates_formatted %>
    </p>
  <% else %>
    <p>
      <strong>Coordinates:</strong>
      <span class="text-muted">Not set</span>
    </p>
  <% end %>

</div>
