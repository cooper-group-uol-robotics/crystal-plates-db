<% content_for :title, "Well #{@well.well_label_with_subwell}" %>

<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="mb-0">Well: <%= @well.well_label_with_subwell %></h1>
  <div>
    <%= link_to 'Edit this well', edit_well_path(@well), class: "btn btn-outline-primary btn-sm me-2" %>
    <%= button_to 'Destroy this well', @well, method: :delete,
                  class: "btn btn-outline-danger btn-sm me-2",
                  form: { style: "display: inline-block;" },
                  data: { confirm: "Are you sure you want to delete Well #{@well.well_label_with_subwell}?" } %>
    <%= link_to 'Back to wells', wells_path, class: "btn btn-outline-secondary btn-sm" %>
  </div>
</div>

<%= render @well %>

<% if @well.has_images? %>
  <div class="mt-4">
    <h3>Images</h3>
    <%= render partial: 'images', locals: { well: @well, images: @well.images } %>
  </div>
<% end %>

<div class="mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="mb-0">SCXRD Datasets</h3>
    <%= link_to 'Add SCXRD Dataset', new_well_scxrd_dataset_path(@well), class: "btn btn-primary btn-sm" %>
  </div>
  
  <% if @well.scxrd_datasets.any? %>
    <div class="row">
      <% @well.scxrd_datasets.each do |dataset| %>
        <div class="col-md-6 col-lg-4 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= dataset.experiment_name %></h5>
              <p class="card-text">
                <small class="text-muted">
                  Measured: <%= dataset.measured_at.strftime("%Y-%m-%d") if dataset.measured_at %><br>
                  Lattice: Primitive
                </small>
              </p>
              <div class="btn-group btn-group-sm" role="group">
                <%= link_to 'View', dataset, class: "btn btn-outline-primary" %>
                <% if dataset.archive.attached? %>
                  <%= link_to 'Download', download_scxrd_dataset_path(dataset), class: "btn btn-outline-success" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-2">
      <%= link_to "View All SCXRD Datasets (#{@well.scxrd_datasets.count})", well_scxrd_datasets_path(@well), class: "btn btn-outline-secondary btn-sm" %>
    </div>
  <% else %>
    <p class="text-muted">No SCXRD datasets have been uploaded for this well.</p>
  <% end %>
</div>
