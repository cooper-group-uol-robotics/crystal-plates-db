<% content_for :title, "Edit #{@stock_solution.display_name}" %>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit <%= @stock_solution.display_name %></h1>
        <div>
          <%= link_to "View", stock_solution_path(@stock_solution), class: "btn btn-outline-primary" %>
          <%= link_to "Back to List", stock_solutions_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>

      <%= render 'form', stock_solution: @stock_solution %>
    </div>
  </div>
</div>
