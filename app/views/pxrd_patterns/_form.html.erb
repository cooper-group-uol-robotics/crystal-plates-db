<%# app/views/pxrd_patterns/_form.html.erb %>
<% form_model = @well.present? ? [@well, @pxrd_pattern] : @pxrd_pattern %>
<%= form_with(model: form_model, local: true, html: { multipart: true, class: "needs-validation", novalidate: true }) do |form| %>
  <% if @pxrd_pattern.errors.any? %>
    <div class="alert alert-danger">
      <h6>Please fix the following errors:</h6>
      <ul class="mb-0">
        <% @pxrd_pattern.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control', placeholder: 'Optional' %>
  </div>

  <div class="mb-3">
    <%= form.label :pxrd_data_file, "PXRD Data File", class: 'form-label' %>
    <%= form.file_field :pxrd_data_file, class: 'form-control', accept: '.xrdml,.xye', required: @pxrd_pattern.new_record? %>
    <div class="form-text">
      Supported formats: .xrdml, .xye
    </div>
    <% if @pxrd_pattern.pxrd_data_file.attached? %>
      <div class="mt-2">
        Current file: <%= link_to @pxrd_pattern.pxrd_data_file.filename, url_for(@pxrd_pattern.pxrd_data_file) %>
      </div>
    <% end %>
    <div class="invalid-feedback">
      Please select a PXRD data file to upload.
    </div>
  </div>

  <div class="d-flex gap-2">
    <%= form.submit (@pxrd_pattern.new_record? ? "Upload Pattern" : "Update Pattern"), class: 'btn btn-primary' %>
    <% if @well.present? %>
      <%= link_to "Cancel", @well.plate, class: "btn btn-outline-secondary" %>
    <% else %>
      <%= link_to "Cancel", (@pxrd_pattern.new_record? ? pxrd_patterns_path : @pxrd_pattern), class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
<% end %>
