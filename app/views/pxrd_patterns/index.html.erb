<% content_for :title, "All PXRD Patterns" %>

<div data-controller="pxrd-overlay" class="pxrd-patterns-index">
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>All PXRD Patterns</h2>
  <div class="d-flex align-items-center gap-3">
    <div class="text-muted">
      <i class="bi bi-graph-up"></i> <%= @pxrd_patterns.total_count %> patterns total
    </div>
    <div class="text-muted small">
      <i class="bi bi-hand-index"></i> Click patterns to select for comparison
    </div>
    <button data-pxrd-overlay-target="compareButton" class="btn btn-success" style="display: none;" data-bs-toggle="modal" data-bs-target="#pxrdOverlayModal">
      <i class="bi bi-layers"></i> Compare Selected (<span data-pxrd-overlay-target="selectedCount">0</span>)
    </button>
    <%= link_to new_pxrd_pattern_path, class: "btn btn-primary" do %>
      <i class="bi bi-upload"></i> Upload Pattern
    <% end %>
  </div>
</div>

<!-- Search and Sort Controls -->
<div class="row mb-4">
  <div class="col-md-6">
    <%= form_with url: pxrd_patterns_path, method: :get, local: true, class: "d-flex" do |f| %>
      <div class="input-group">
        <%= f.text_field :search, 
                        value: params[:search], 
                        placeholder: "Search by filename or title...", 
                        class: "form-control" %>
        <button class="btn btn-outline-secondary" type="submit">
          <i class="bi bi-search"></i>
        </button>
        <% if params[:search].present? %>
          <%= link_to pxrd_patterns_path(sort: params[:sort], direction: params[:direction]), 
                     class: "btn btn-outline-secondary" do %>
            <i class="bi bi-x"></i>
          <% end %>
        <% end %>
      </div>
      <%= f.hidden_field :sort, value: params[:sort] %>
      <%= f.hidden_field :direction, value: params[:direction] %>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="d-flex justify-content-end gap-2">
      <div class="btn-group" role="group">
        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
          <i class="bi bi-sort-down"></i> 
          Sort by: 
          <% case params[:sort] %>
          <% when 'title' %>
            Title
          <% when 'filename' %>
            Filename
          <% when 'created_at' %>
            Date Created
          <% else %>
            Date Measured
          <% end %>
        </button>
        <ul class="dropdown-menu">
          <li>
            <%= link_to pxrd_patterns_path(sort: 'measured_at', direction: 'desc', search: params[:search]), 
                       class: "dropdown-item #{'active' if (params[:sort].nil? || params[:sort] == 'measured_at') && params[:direction] != 'asc'}" do %>
              <i class="bi bi-calendar-check"></i> Date Measured (Newest)
            <% end %>
          </li>
          <li>
            <%= link_to pxrd_patterns_path(sort: 'measured_at', direction: 'asc', search: params[:search]), 
                       class: "dropdown-item #{'active' if (params[:sort].nil? || params[:sort] == 'measured_at') && params[:direction] == 'asc'}" do %>
              <i class="bi bi-calendar-check"></i> Date Measured (Oldest)
            <% end %>
          </li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <%= link_to pxrd_patterns_path(sort: 'title', direction: 'asc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'title' && params[:direction] == 'asc'}" do %>
              <i class="bi bi-sort-alpha-down"></i> Title (A-Z)
            <% end %>
          </li>
          <li>
            <%= link_to pxrd_patterns_path(sort: 'title', direction: 'desc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'title' && params[:direction] == 'desc'}" do %>
              <i class="bi bi-sort-alpha-up"></i> Title (Z-A)
            <% end %>
          </li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <%= link_to pxrd_patterns_path(sort: 'filename', direction: 'asc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'filename' && params[:direction] == 'asc'}" do %>
              <i class="bi bi-file-earmark-text"></i> Filename (A-Z)
            <% end %>
          </li>
          <li>
            <%= link_to pxrd_patterns_path(sort: 'filename', direction: 'desc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'filename' && params[:direction] == 'desc'}" do %>
              <i class="bi bi-file-earmark-text"></i> Filename (Z-A)
            <% end %>
          </li>
          <li><hr class="dropdown-divider"></li>
          <li>
            <%= link_to pxrd_patterns_path(sort: 'created_at', direction: 'desc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'created_at' && params[:direction] != 'asc'}" do %>
              <i class="bi bi-clock"></i> Date Created (Newest)
            <% end %>
          </li>
          <li>
            <%= link_to pxrd_patterns_path(sort: 'created_at', direction: 'asc', search: params[:search]), 
                       class: "dropdown-item #{'active' if params[:sort] == 'created_at' && params[:direction] == 'asc'}" do %>
              <i class="bi bi-clock"></i> Date Created (Oldest)
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<% if @pxrd_patterns.any? %>
  <% if params[:search].present? %>
    <div class="alert alert-info mb-3">
      <i class="bi bi-search"></i> 
      Showing <%= @pxrd_patterns.total_count %> patterns matching "<strong><%= params[:search] %></strong>"
      <%= link_to "Clear search", pxrd_patterns_path(sort: params[:sort], direction: params[:direction]), 
                 class: "btn btn-sm btn-outline-primary ms-2" %>
    </div>
  <% end %>
  
  <div class="row">
    <% @pxrd_patterns.each do |pattern| %>
      <div class="col-md-6 col-lg-4 col-xl-3 mb-4">
        <div class="card h-100 pattern-card <%= 'disabled' unless pattern.pxrd_data_file.attached? %>" 
             data-pattern-id="<%= pattern.id %>"
             data-has-data="<%= pattern.pxrd_data_file.attached? %>"
             data-pxrd-overlay-target="patternCard"
             data-action="click->pxrd-overlay#selectPattern">
          <div class="card-body">
            <!-- Hidden checkbox for state management -->
            <input class="pattern-checkbox d-none" type="checkbox" 
                   value="<%= pattern.id %>" 
                   id="pattern-<%= pattern.id %>-checkbox"
                   data-pattern-title="<%= pattern.title.presence || "Pattern ##{pattern.id}" %>"
                   <% unless pattern.pxrd_data_file.attached? %>disabled<% end %>>
            
            <!-- Selection indicator -->
            <div class="selection-indicator position-absolute" style="top: 8px; right: 8px; z-index: 10; display: none;">
              <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                   style="width: 24px; height: 24px;">
                <i class="bi bi-check" style="font-size: 12px;"></i>
              </div>
            </div>
            
            <!-- Pattern visualization -->
            <div style="height: 120px; position: relative;" class="mb-3 bg-light border rounded d-flex align-items-center justify-content-center">
              <% if pattern.pxrd_data_file.attached? %>
                <%= render 'plot', pxrd_pattern: pattern, canvas_id: "pattern-#{pattern.id}", mini_chart: true %>
              <% else %>
                <div class="text-muted">
                  <i class="bi bi-graph-up" style="font-size: 2rem;"></i>
                  <div class="small">No data file</div>
                </div>
              <% end %>
            </div>
            
            <div class="small text-muted mb-2">
              <% if pattern.well.present? %>
                <div><strong>Well:</strong> <%= pattern.well.plate.barcode %>-<%= pattern.well.well_label %></div>
              <% end %>
              <div><strong>Measured:</strong> <%= (pattern.measured_at || pattern.created_at).strftime('%b %d, %Y at %H:%M') %></div>
              <% if pattern.pxrd_data_file.attached? %>
                <div><strong>File:</strong> 
                  <span class="<%= 'fw-bold text-primary' if params[:sort] == 'filename' %>">
                    <%= pattern.pxrd_data_file.filename %>
                  </span>
                </div>
              <% end %>
              <div><strong>Created:</strong> <%= pattern.created_at.strftime('%b %d, %Y at %H:%M') %></div>
            </div>
          </div>
          
          <div class="card-footer bg-light">
            <div class="btn-group w-100" role="group">
              <% if pattern.well.present? %>
                <%= link_to well_pxrd_pattern_path(pattern.well, pattern), 
                           class: "btn btn-outline-primary btn-sm" do %>
                  <i class="bi bi-eye"></i> View
                <% end %>
                <%= link_to edit_well_pxrd_pattern_path(pattern.well, pattern), 
                           class: "btn btn-outline-secondary btn-sm" do %>
                  <i class="bi bi-pencil"></i> Edit
                <% end %>
              <% else %>
                <%= link_to pxrd_pattern_path(pattern), 
                           class: "btn btn-outline-primary btn-sm" do %>
                  <i class="bi bi-eye"></i> View
                <% end %>
                <%= link_to edit_pxrd_pattern_path(pattern), 
                           class: "btn btn-outline-secondary btn-sm" do %>
                  <i class="bi bi-pencil"></i> Edit
                <% end %>
              <% end %>
              <% if pattern.pxrd_data_file.attached? %>
                <%= link_to url_for(pattern.pxrd_data_file), 
                           download: pattern.pxrd_data_file.filename,
                           class: "btn btn-outline-success btn-sm" do %>
                  <i class="bi bi-download"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="d-flex justify-content-center mt-4">
    <%= paginate @pxrd_patterns, params: { search: params[:search], sort: params[:sort], direction: params[:direction] } %>
  </div>

<% else %>
    <div class="alert alert-info text-center">
    <% if params[:search].present? %>
      <i class="bi bi-search" style="font-size: 3rem;" class="text-muted"></i>
      <h4>No Matching Patterns</h4>
      <p>No PXRD patterns match your search for "<strong><%= params[:search] %></strong>".</p>
      <p class="mb-0">
        <%= link_to "Clear search", pxrd_patterns_path, class: "btn btn-outline-primary" %>
      </p>
    <% else %>
      <i class="bi bi-inbox" style="font-size: 3rem;" class="text-muted"></i>
      <h4>No PXRD Patterns</h4>
      <p class="mb-0">
        <small class="text-muted">
          PXRD patterns are uploaded from individual well pages or as standalone patterns.
        </small>
      </p>
    <% end %>
  </div>
<% end %>

<!-- PXRD Overlay Comparison Modal -->
<div class="modal fade" id="pxrdOverlayModal" tabindex="-1" aria-labelledby="pxrdOverlayModalLabel" aria-hidden="true" data-action="shown.bs.modal->pxrd-overlay#modalShown">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="pxrdOverlayModalLabel">
          <i class="bi bi-layers"></i> PXRD Pattern Comparison
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row mb-3">
          <div class="col-md-8">
            <div class="d-flex align-items-center gap-2">
              <label class="form-label mb-0">Patterns:</label>
              <span data-pxrd-overlay-target="patternsList" class="text-muted">None selected</span>
            </div>
          </div>
          <div class="col-md-4 text-end">
            <div class="btn-group btn-group-sm" role="group">
              <button type="button" class="btn btn-outline-secondary" data-action="click->pxrd-overlay#toggleLegend">
                <i class="bi bi-list"></i> Toggle Legend
              </button>
              <button type="button" class="btn btn-outline-secondary" data-action="click->pxrd-overlay#resetZoom">
                <i class="bi bi-zoom-out"></i> Reset Zoom
              </button>
            </div>
          </div>
        </div>
        
        <div class="position-relative">
          <div style="height: 500px; background: #f8f9fa;" class="border rounded">
            <canvas data-pxrd-overlay-target="overlayChart"></canvas>
          </div>
          <div data-pxrd-overlay-target="overlayLoading" class="position-absolute top-50 start-50 translate-middle text-center" style="display: none;">
            <div class="spinner-border text-secondary mb-2" role="status">
              <span class="visually-hidden">Loading patterns...</span>
            </div>
            <div class="text-muted small">Loading selected patterns...</div>
          </div>
        </div>
        
        <div class="mt-3">
          <small class="text-muted">
            <i class="bi bi-info-circle"></i>
            Use Ctrl+drag to pan, scroll or drag to zoom. Click and drag a selection to zoom to that area.
          </small>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

</div> <!-- Close pxrd-overlay controller -->

<style>
  .pattern-card {
    transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.1s ease;
    cursor: pointer;
    position: relative;
  }
  
  .pattern-card:hover:not(.disabled) {
    border-color: #86b7fe;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.12);
  }
  
  .pattern-card.selected {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    background-color: rgba(13, 110, 253, 0.05);
  }
  
  .pattern-card.disabled {
    cursor: not-allowed;
    opacity: 0.6;
  }
  
  .pattern-card.disabled:hover {
    transform: none;
    box-shadow: none;
    border-color: inherit;
  }
  
  .selection-indicator {
    transition: opacity 0.2s ease;
  }
  
  .pattern-card.selected .selection-indicator {
    display: block !important;
  }
</style>


