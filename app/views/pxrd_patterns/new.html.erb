<% content_for :title, "Upload PXRD Pattern for Well \\#{@well.well_label_with_subwell}" %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Upload PXRD Pattern for Well <%= @well.well_label_with_subwell %></h4>
          <small class="text-muted">Plate: <%= @well.plate.barcode %></small>
        </div>
        <div class="card-body">
          <%= render 'form', pxrd_pattern: @pxrd_pattern %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-3 text-center">
  <%= link_to 'Back to Plate', @well.plate, class: 'btn btn-secondary' %>
</div>
