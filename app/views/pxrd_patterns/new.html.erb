<% if @well.present? %>
  <% content_for :title, "Upload PXRD Pattern for Well \\#{@well.well_label_with_subwell}" %>
<% else %>
  <% content_for :title, "Upload New PXRD Pattern" %>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <% if @well.present? %>
    <h2>Upload PXRD Pattern for Well <%= @well.well_label_with_subwell %></h2>
    <%= link_to "Back to Plate", @well.plate, class: "btn btn-outline-secondary" %>
  <% else %>
    <h2>Upload New PXRD Pattern</h2>
    <%= link_to "Back to All Patterns", pxrd_patterns_path, class: "btn btn-outline-secondary" %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="bi bi-upload"></i> Pattern Details
        </h5>
        <% if @well.present? %>
          <small class="text-muted">Plate: <%= @well.plate.barcode %></small>
        <% end %>
      </div>
      <div class="card-body">
        <%= render 'form', pxrd_pattern: @pxrd_pattern %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h6 class="card-title mb-0">
          <i class="bi bi-info-circle"></i> Upload Information
        </h6>
      </div>
      <div class="card-body">
        <h6>Supported File Formats</h6>
        <ul class="list-unstyled">
          <li><strong>.xrdml</strong> - PANalytical X'Pert format with full metadata</li>
          <li><strong>.xye</strong> - Simple two-column format (2Î¸, intensity)</li>
        </ul>
        
        <hr>
        
        <h6>Pattern Information</h6>
        <% if @well.present? %>
          <p class="small text-muted">
            This pattern will be associated with well <%= @well.well_label_with_subwell %> 
            on plate <%= @well.plate.barcode %>.
          </p>
        <% else %>
          <p class="small text-muted">
            Upload patterns not associated with any specific well or plate. 
            These can be reference patterns, standards, or patterns from external sources.
          </p>
        <% end %>
        
        <p class="small text-muted">
          Metadata like measurement timestamps and wavelengths will be automatically 
          extracted from .xrdml files when available.
        </p>
      </div>
    </div>
  </div>
</div>

<script>
  // Bootstrap validation
  (function() {
    'use strict';
    window.addEventListener('load', function() {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function(form) {
        form.addEventListener('submit', function(event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>
