<% content_for :title, "Edit Location" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Edit Location</h1>
  <div>
    <%= link_to 'Show', @location, class: "btn btn-outline-primary me-2" %>
    <%= link_to 'Back', locations_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <%= render 'form', location: @location %>
      </div>
    </div>
  </div>
</div>
