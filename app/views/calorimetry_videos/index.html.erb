<% content_for :title, "Calorimetry Videos" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Calorimetry Videos</h2>
        <%= link_to "Upload New Video", new_calorimetry_video_path, class: "btn btn-primary" %>
      </div>

      <% if @calorimetry_videos.any? %>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Plate</th>
                <th>Recorded At</th>
                <th>Video File</th>
                <th>Datasets</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @calorimetry_videos.each do |video| %>
                <tr>
                  <td>
                    <%= link_to video.name, video, class: "text-decoration-none" %>
                    <% if video.description.present? %>
                      <br><small class="text-muted"><%= truncate(video.description, length: 50) %></small>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to video.plate.barcode, plate_path(video.plate), class: "text-decoration-none" %>
                    <% if video.plate.name.present? %>
                      <br><small class="text-muted"><%= video.plate.name %></small>
                    <% end %>
                  </td>
                  <td>
                    <%= time_ago_in_words(video.recorded_at) %> ago
                    <br><small class="text-muted"><%= video.recorded_at.strftime("%B %d, %Y at %l:%M %p") %></small>
                  </td>
                  <td>
                    <% if video.video_file.attached? %>
                      <span class="badge bg-success">
                        <i class="fas fa-video"></i>
                        <%= number_to_human_size(video.video_file.byte_size) %>
                      </span>
                      <br><small class="text-muted"><%= video.video_file.filename %></small>
                    <% else %>
                      <span class="badge bg-warning">No file</span>
                    <% end %>
                  </td>
                  <td>
                    <% dataset_count = video.calorimetry_datasets.count %>
                    <span class="badge bg-<%= dataset_count > 0 ? 'info' : 'secondary' %>">
                      <%= dataset_count %> dataset<%= 's' unless dataset_count == 1 %>
                    </span>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <%= link_to "View", video, class: "btn btn-sm btn-outline-primary" %>
                      <%= link_to "Edit", edit_calorimetry_video_path(video), class: "btn btn-sm btn-outline-secondary" %>
                      <%= link_to "Delete", video, method: :delete, 
                                  class: "btn btn-sm btn-outline-danger",
                                  confirm: "Are you sure? This will also delete all associated datasets and datapoints.",
                                  data: { 
                                    confirm: "Are you sure? This will also delete all associated datasets and datapoints." 
                                  } %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <div class="mb-3">
            <i class="fas fa-video fa-3x text-muted"></i>
          </div>
          <h4 class="text-muted">No Calorimetry Videos</h4>
          <p class="text-muted">Upload your first calorimetry video to get started.</p>
          <%= link_to "Upload Video", new_calorimetry_video_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>