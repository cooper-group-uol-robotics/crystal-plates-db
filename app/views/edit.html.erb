<% content_for :title, "Edit #{@chemical.name}" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="mb-1">Edit Chemical</h1>
    <small class="text-muted"><%= @chemical.name %></small>
  </div>
  <div>
    <%= link_to "View", chemical_path(@chemical), class: "btn btn-outline-primary me-2" %>
    <%= link_to "Back to Chemicals", chemicals_path, class: "btn btn-outline-secondary" %>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Chemical Information</h5>
      </div>
      <div class="card-body">
        <%= render 'form', chemical: @chemical %>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Actions</h5>
      </div>
      <div class="card-body">
        <%= link_to "Delete Chemical", chemical_path(@chemical), 
                    method: :delete, 
                    data: { confirm: "Are you sure you want to delete this chemical? This action cannot be undone." },
                    class: "btn btn-outline-danger w-100" %>
      </div>
    </div>
    
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="card-title mb-0">Record Information</h5>
      </div>
      <div class="card-body">
        <div class="mb-2">
          <label class="form-label text-muted small">Created</label>
          <div class="small"><%= @chemical.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
        </div>
        <div>
          <label class="form-label text-muted small">Last Updated</label>
          <div class="small"><%= @chemical.updated_at.strftime("%B %d, %Y at %I:%M %p") %></div>
        </div>
      </div>
    </div>
  </div>
</div>
